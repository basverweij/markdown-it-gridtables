{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*.js": {
            "when": "$(basename).ts"
        },
        "**/*.js.map": true,
        "node_modules": true,
        ".nyc_output": true,
        "coverage": true
    },
    "mocha.requires": [
        "ts-node/register"
    ],
    "mocha.files.glob": "test/**/*.ts",
    "mocha.coverage": {
        "enable": true,
        "decoration": true,
        "runWithInterval": false,
        "autoUpdateInterval": 20000,
        "activeOnStart": true,
        "runAfterTest": true,
        "runCoverageAfterFileSave": false,
        "reporters": []
    }
}